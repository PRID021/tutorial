---
const { tags} = Astro.props;
---


<div class="tags">
    {
      tags.map((tag) => (
        <a class="tag" href={`/tags/${tag}`}> 
            {tag}
        </a>
      ))
    }
  </div>
<style>
    a {
      color: #00539f;
      text-decoration: none;
    }
    .tags {
      display: flex;
      flex-wrap: wrap;
      margin: 16px 0px;
    }
  
    .tag {
      margin: 0.25rem;
      border: dotted 1px #a1a1a1;
      border-radius: 0.5em;
      padding: 0.5em 1em;
      font-size: 1.15em;
      background-color: #f8fcfd;
      cursor: pointer;
      transition:
        background-color 0.3s,
        color 0.3s;
        box-shadow 0.3s;
    }
    .tag:hover {
      background-color: #ccc;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
  
    .tag:active {
      background-color: #666;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
  </style>
  